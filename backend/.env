# Quiz Master 2 - Email Notification Configuration Template
# Copy this file to .env and fill in your actual email credentials

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email notification settings - MailHog Configuration
EMAIL_FROM=noreply@quizmaster.local
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
# =============================================================================
# OTHER CONFIGURATION
# =============================================================================
# Database
DATABASE_URL=sqlite:///quiz.db

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Session timeout (minutes)
SESSION_TIMEOUT_MINUTES=30

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Email rate limiting
EMAIL_RATE_LIMIT=10/m 